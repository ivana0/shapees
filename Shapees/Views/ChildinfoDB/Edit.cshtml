            document.location = '@Url.Action("Index", "ChildinfoDB")';

        }
        function openCreate() {
            document.location = '@Url.Action("Create", "ChildinfoDB")';

        }


        function openEdit() {

            document.getElementById("edit_child").onclick = function () {
                //disable
                this.disabled = true;

            }

        }
        function openDelete() {
            document.getElementById("delete_child").onclick = function () {
