@model Shapees.Models.DatabaseModel.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/DocumentsAndMediaLayout.cshtml";
}
<head>
    <style>
        /* Other */
        .btn-gray {
            color: #fff;
            background-color: #eee;
            border-color: #ccc;
            color: #000;
        }


        .btn.borderless {
            border: none;
            background: inherit;
        }

            .btn.borderless.dropdown-toggle {
                -webkit-box-shadow: none;
                box-shadow: none;
            }

        .rb {
            border-right: 1px solid #ccc;
        }

        .topcis-header {
            margin-top: 20px;
            margin-bottom: -1px;
            background-color: #f8f8f8;
            border: 1px solid #e5e5e5;
            border-radius: 3px 3px 0 0;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        label {
            font-size: 1em;
        }

        /* Style the tab */
        div.tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

            /* Style the buttons inside the tab */
            div.tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
            }

                /* Change background color of buttons on hover */
                div.tab button:hover {
                    background-color: #ddd;
                }


                /* Create an active/current tablink class */
                div.tab button.active {
                    background-color: #ccc;
                }

        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }

        /* Remove hover for disabled tab links */
        #edit_report {
            background-color: #f1f1f1;
            color: #D3D3D3;
        }

        #delete_report {
            background-color: #f1f1f1;
            color: #D3D3D3;
        }

        #report_details {
            background-color: #f1f1f1;
            color: #D3D3D3;
        }
    </style>
    <script>

        Date.prototype.toDateInputValue = (function () {
            var local = new Date(this);
            local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
            return local.toJSON().slice(0, 10);
        });

        var date = new Date();

        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();

        if (month < 10) month = "0" + month;
        if (day < 10) day = "0" + day;

        var today = year + "-" + month + "-" + day;
        document.getElementById("todaysDate").value = today;

        //open tab function
        function openOption(evt, optionName) {
            // Declare all variables
            var i, tabcontent, tablinks;

            // Get all elements with class="tabcontent" and hide them
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }

            // Get all elements with class="tablinks" and remove the class "active"
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }

            // Show the current tab, and add an "active" class to the button that opened the tab
            document.getElementById(optionName).style.display = "block";
            evt.currentTarget.className += " active";

        }

        //open documents&media home page on body load
        function loadHome() {
            // Show the list reports home tab
            document.getElementById('CreateDocument').style.display = "block";
            // Set button to active
            document.getElementById("create_document").className += " active";
        }

        //redirect to action pages
        //open Create Report
        function openCreateReport() {
            document.location = '@Url.Action("Create", "ReportsDB")';

        }
        //open Create Document
        function openCreateDocument() {
            document.location = '@Url.Action("Create", "DocumentsDB")';

        }
        //open Create Media
        function openCreateMedia() {
            document.location = '@Url.Action("Create", "MediaDB")';

        }
        //open Reports Index - search reports
        function openReportsIndex() {
            document.location = '@Url.Action("Index", "ReportsDB")';

        }

        //function opens search Reports
        function searchReports() {
            document.location = '@Url.Action("Index", "ReportsDB")';
        }
        //function opens search Documents
        function searchDocuments() {
            document.location = '@Url.Action("Index", "DocumentsDB")';
        }
        //function opens search Media
        function searchMedia() {
            document.location = '@Url.Action("Index", "MediaDB")';
        }

    </script>
</head>
<body onload="loadHome()">

    <h2>Reports, Documents and Media</h2>
    <!--       START TABS        -->
    <div class="tab">
        <button id="home_page" class="tablinks" onclick="openReportsIndex()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&ensp;Reports, Documents and Media</button>
        <button id="create_report" class="tablinks" onclick="openCreateReport()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&ensp;Create Report</button>
        <button id="create_document" class="tablinks" onclick="openCreateDocument()">
            <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
            &ensp;Upload Documents
        </button>
        <button id="create_media" class="tablinks" onclick="openCreateMedia()">
            <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
            &ensp;Upload Media
        </button>
    </div>

    <!--    FIRST TAB - Home (list of reports)    -->
    <div id="ListReports" class="tabcontent">
    </div>
    <!--    END FIRST TAB   -->
    <!--    2ND TAB - Create Reports    -->
    <div id="CreateReport" class="tabcontent">

        <br /><br />
    </div>
    <!-- END Create Reports -->
    <!--    3RD TAB - Create Document    -->
    <div id="CreateDocument" class="tabcontent">
        <div id="upload_form">
            <h3>Upload Document</h3>
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="container">
                <br />
                <h4>Document Information</h4>
                <hr width="90%" />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Documenttype" class=" control-label">Document Type</label>
                        <input asp-for="Documenttype" class="form-control" required />
                        <span asp-validation-for="Documenttype" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Title" class=" control-label"></label>
                        <input asp-for="Title" class="form-control" type="text" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Authorid" class="control-label">Author ID</label>
                        <select asp-for="Authorid" class="form-control" asp-items="ViewBag.Authorid"></select>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">

                        <label asp-for="Authorfirst" class="control-label">Author First Name</label>
                        <input asp-for="Authorfirst" class="form-control" />
                        <span asp-validation-for="Authorfirst" class="text-danger"></span>

                    </div>
                    <div class="col-md-3 mb-3">

                        <label asp-for="Authorlast" class="control-label">Author Last Name</label>
                        <input asp-for="Authorlast" class="form-control" />
                        <span asp-validation-for="Authorlast" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Childid" class="control-label">Child ID</label>
                        <select asp-for="Childid" class="form-control" asp-items="ViewBag.Childid"></select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Childfirst" class="control-label">Child's First Name </label>
                        <input asp-for="Childfirst" class="form-control" type="text" />
                        <span asp-validation-for="Childfirst" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Childlast" class="control-label">Child's Last Name</label>
                        <input asp-for="Childlast" class="form-control" type="text" />
                        <span asp-validation-for="Childlast" class="text-danger"></span>

                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">

                        <label asp-for="Dateuploaded" class="control-label">Date Uploaded</label>
                        <input asp-for="Dateuploaded" class="form-control" type="date" id="todaysDate" />
                        <span asp-validation-for="Dateuploaded" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Filepath" class="control-label">File</label>
                        <input asp-for="Filepath" class="form-control" type="file" />
                        <span asp-validation-for="Filepath" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">

                        <input type="submit" value="Create" class="btn btn-success" />
                        <button type="reset" value="reset" class="btn btn-danger">Reset Form </button>

                    </div>
                </div>
            </form>
        </div>

        <br /><br />
    </div>
    <!-- END Create Documents -->
    <!--    4TH TAB - Create Media    -->
    <div id="CreateMedia" class="tabcontent">
    </div>
    <!-- END Create Media -->
</body>

