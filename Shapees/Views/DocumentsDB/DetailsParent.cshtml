@model Shapees.Models.DatabaseModel.Document

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Document</h4>
    <hr />
    <div>
        <a asp-action="Download" asp-route-filename="@Model.Filepath"><span style="color:limegreen;" class="glyphicon glyphicon-download" aria-hidden="true"></span>&ensp;Download This Document</a>
        <br /><br />
    </div>
    <dl class="dl-horizontal">
        <dt>
            Document type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Documenttype)
        </dd>
        <dt>
            Author
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AuthorFullName)
        </dd>
        <dt>
            Child
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChildFullName)
        </dd>
        <dt>
            Date uploaded
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dateuploaded)
        </dd>
        <dt>
            Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    &emsp;<a asp-action="IndexParent"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&ensp;Back to Document List</a> &emsp;
    <br /><br />
</div>
