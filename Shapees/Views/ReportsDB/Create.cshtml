@model Shapees.Models.DatabaseModel.Report

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/DocumentsAndMediaLayout.cshtml";
}
<head>
    <style>
        /* Other */
        .btn-gray {
            color: #fff;
            background-color: #eee;
            border-color: #ccc;
            color: #000;
        }


        .btn.borderless {
            border: none;
            background: inherit;
        }

        .btn.borderless.dropdown-toggle {
            -webkit-box-shadow: none;
            box-shadow: none;
        }
           
        .rb {
            border-right: 1px solid #ccc;
        }

        .topcis-header {
            margin-top: 20px;
            margin-bottom: -1px;
            background-color: #f8f8f8;
            border: 1px solid #e5e5e5;
            border-radius: 3px 3px 0 0;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        label {
            font-size: 1em;
        }

        /* Style the tab */
        div.tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

        /* Style the buttons inside the tab */
        div.tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
        }

        /* Change background color of buttons on hover */
        div.tab button:hover {
            background-color: #ddd;
        }


        /* Create an active/current tablink class */
        div.tab button.active {
            background-color: #ccc;
        }

        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }

        /* Remove hover for disabled tab links */
        #edit_report {
            background-color: #f1f1f1;
            color: #D3D3D3;
        }

        #delete_report {
            background-color: #f1f1f1;
            color: #D3D3D3;
        }

        #report_details {
            background-color: #f1f1f1;
            color: #D3D3D3;
        }
    </style>
    <script>

        //open tab function
        function openOption(evt, optionName) {
            // Declare all variables
            var i, tabcontent, tablinks;

            // Get all elements with class="tabcontent" and hide them
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }

            // Get all elements with class="tablinks" and remove the class "active"
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }

            // Show the current tab, and add an "active" class to the button that opened the tab
            document.getElementById(optionName).style.display = "block";
            evt.currentTarget.className += " active";

        }

        //open documents&media home page on body load
        function loadHome() {
            // Show the list reports home tab
            document.getElementById('CreateReport').style.display = "block";
            // Set button to active
            document.getElementById("create_report").className += " active";
        }

        //redirect to action pages
        //open Create Report
        function openCreateReport() {
            document.location = '@Url.Action("Create", "ReportsDB")';

        }
        //open Create Document
        function openCreateDocument() {
            document.location = '@Url.Action("Create", "DocumentsDB")';

        }
        //open Create Media
        function openCreateMedia() {
            document.location = '@Url.Action("Create", "MediaDB")';

        }
        //open Reports Index - search reports
        function openReportsIndex() {
            document.location = '@Url.Action("Index", "ReportsDB")';

        }

        //function opens search Reports
        function searchReports() {
            document.location = '@Url.Action("Index", "ReportsDB")';
        }
        //function opens search Documents
        function searchDocuments() {
            document.location = '@Url.Action("Index", "DocumentsDB")';
        }
        //function opens search Media
        function searchMedia() {
            document.location = '@Url.Action("Index", "MediaDB")';
        }

    </script>
</head>
