<!--        START BODY        -->
<!------------------------------>

<body onload="loadUsersHome()">
    <h2>Users management</h2>
    <!--       START TABS        -->
    <div class="tab">
        <button id="home_users" class="tablinks" onclick="openOption(event, 'ListUsers')">Users Home</button>
        <button class="tablinks" onclick="openOption(event, 'CreateUser')">Create User</button>
        <button class="tablinks" onclick="openOption(event, 'EditUser')">Edit User</button>
    </div>
    <!--    FIRST TAB - Home (list of users)    -->
    <div id="ListUsers" class="tabcontent">
        <!--   START USER SEARCH BAR   -->
        <div class="container" style="height: 50px; ">
            <div class="row" style="height: 50px; ">
                <div class="navbar" style="padding-top:15px;float:left;margin:0 auto; ">&emsp;Search user&emsp;</div>
                <div class="navbar" style="padding-top:10px;float:left;margin:0 auto; ">
                    <div class="input-group" style="float:left;margin:0 auto;">
                        <select class="form-control">
                            <option value="byfirstlast">By First &amp; Last name</option>
                            <option value="byfirstname">By First name</option>
                            <option value="bylastname">By Last name</option>
                            <option value="bytype">By Type</option>
                        </select><!-- /select-group -->
                    </div>
                </div>
                <div class="col-lg-3" style="padding-top:10px; ">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div><!--/input-group -->
                </div>
            </div>
        </div>
        <!--   END USER SEARCH BAR   -->
        <!--    END FIRST TAB   -->
        <table class="table">
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>User Type</th>
                <th>Last logged in</th>
                <th>Is logged in</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pass)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.is_logged_in)
                    </td>
                </tr>
            }
        </table>
        <nav aria-label="..."><ul class="pagination"></ul></nav>
    </div>

    <!--    SECOND TAB - Create User    -->
    <div id="CreateUser" class="tabcontent">
        <!-- Second Form to Create User -->
        <form class="container">
                <br />
                <h4>Login information</h4>
                <hr  width="90%" />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <!-- <img src="e alt="User Logo" asp-append-version="true" /> -->
                        <!-- <input type="file" asp-for="UploadedImage" /> -->
                        <label for="email" style="font-weight:normal;">Email</label>
                        <input style="width: 100%; max-width:none; " type="email" class="form-control" id="useremail" placeholder="Email" value="" required>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="username" style="font-weight:normal;">Username</label>
                        <input type="text" class="form-control" id="username" placeholder="Username" value="" style="width: 100%; max-width:none; " required>
                        <small id="userhelp" class="text-muted">
                            Your username must contain letters and numbers only.
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        Password
                        <input type="password" class="form-control" id="password" placeholder="Password" value="" style="width: 100%; max-width:none; " required>
                        <small id="passhelp" class="text-muted">
                            Your password must be 8-20 characters long, contain letters, numbers and special characters.
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                   <div class="col-md-1 mb-2"> User Type </div>
                    <div class="col-md-3 mb-3">
                        <select class="form-control" id="usertype" name="usertype" onchange="loadFormType()" required>
                            <option value="notype">Choose Type ...</option>
                            <option value="parent">Parent</option>
                            <option value="educator">Educator</option>
                            <option value="director">Director</option>
                        </select>
                        <br />
                    </div>
                </div>
                <br />
                <h4>User information</h4>
                <hr width="90%" />
                <div class="row">
                    <div class="col-md-5">
                        <label for="firstname" style="font-weight:normal;">First Name</label>
                        <small style="width: 100%; max-width:none; " id="namehelp" class="text-muted">
                            (Include middle names if any)
                        </small>
                        <input style="width: 100%; max-width:none; " type="text" class="form-control" id="firstname" placeholder="First name" value="" required>
                    </div>
                    <div class="col-md-6">
                        <label for="lastname" style="font-weight:normal;">Last Name</label>
                        <input style="width: 100%; max-width:none; " type="text" class="form-control" id="lastname" placeholder="Last name" value="" required>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="address" style="font-weight:normal;font-size:larger;">Address</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-11">
                        <label for="street" style="font-weight:normal;">Street </label>
                        <small style="width: 100%; max-width:none; " id="namehelp" class="text-muted">
                            (If building, include Unit and Street number)
                        </small>
                        <input style="width: 100%; max-width:none; " type="text" class="form-control" id="street" placeholder="E.g. 1 Northfields Avenue" required>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <label for="city" style="font-weight:normal;">City</label>
                        <input style="width: 100%; max-width:none;" type="text" class="form-control" id="city" placeholder="City" required>
                    </div>
                    <div class="col-md-2">
                        <label for="state" style="font-weight:normal;">State </label>
                        <select class="form-control" id="state" name="state" required>
                            <option value="nostate">Choose State ...</option>
                            <option value="nsw">NSW</option>
                            <option value="qld">QLD</option>
                            <option value="act">ACT</option>
                            <option value="vic">VIC</option>
                            <option value="sa">SA</option>
                            <option value="vic">VIC</option>
                            <option value="wa">WA</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="postcode" style="font-weight:normal;">Postcode</label>
                        <input type="text" class="form-control" id="postcode" placeholder="Postcode" required>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="contactinformation" style="font-weight:normal;font-size:larger;">Contact Information</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="homephone" style="font-weight:normal;">Home Phone</label>
                        <input style="width: 100%; max-width:none; " type="text" class="form-control" id="homephone" placeholder="Home phone (e.g. 02 1234 5678)" value="">
                    </div>
                    <div class="col-md-6">
                        <label for="mobilephone" style="font-weight:normal;">Mobile Phone</label>
                        <input style="width: 100%; max-width:none; " type="text" class="form-control" id="mobilephone" placeholder="Mobile phone (e.g. 0451 123 456)" value="">
                    </div>
                </div>
                <br />
                <h4>Additional information</h4>
                <hr width="90%" />
                <div class="row">
                    <div id="parent1" class="col-md-5 mb-3" style="display:none;">
                        <label for="additionalcontact" style="font-weight:normal;">Additional contact number </label>
