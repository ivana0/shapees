@model Shapees.Models.DatabaseModel.Userinfo
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_EducatorLayout.cshtml";
}

<head>

    <style>
        .ds-btn li {
            list-style: none;
            float: left;
            padding: 10px;
        }


        .ds-btn li a span {
            padding-left: 15px;
            padding-right: 5px;
            width: 100%;
            display: inline-block;
            text-align: left;
        }

        .ds-btn li a span small {
            width: 100%;
            display: inline-block;
            text-align: left;
        }

        .ds-btn li a span {
            padding-left: 15px;
            padding-right: 5px;
            width: 100%;
            display: inline-block;
            text-align: left;
        }

        .ds-btn li a span small {
             width: 100%;
             display: inline-block;
             text-align: left;
         }

        .user-row {
            margin-bottom: 14px;
        }

            .user-row:last-child {
                margin-bottom: 0;
            }

        .dropdown-user {
            margin: 13px 0;
            padding: 5px;
            height: 100%;
        }

            .dropdown-user:hover {
                cursor: pointer;
            }

        .table-user-information > tbody > tr {
            border-top: 1px solid rgb(211, 211, 211);
        }

            .table-user-information > tbody > tr:first-child {
                border-top: 0;
            }

            .table-user-information > tbody > tr > td {
                border-top: 0;
            }
    </style>

</head>

<body>
<div class="container">
        <div class="row">

            <div class="col-md-12">

                <p></p>
                <h2></h2>
                <p> </p><p> </p>

                <div class="panel panel-info ">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3" align="center">
                                @if (Model.Profileimage != null)
                                {
                                        //height="150" width="150" in user details
                                        <img src="@ViewBag.imagesrc" class="img-circle img-responsive">
                                }
                                @if (Model.Profileimage == null)
                                {
                                    <img src="http://s3.amazonaws.com/nvest/Blank_Club_Website_Avatar_Gray.jpg" class="img-circle img-responsive">
                                }
                            </div>
                            <div class=" col-md-7">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Role</td>
                                            <td>Educator</td>
                                        </tr>
                                        <tr>
                                            <td>Hire date</td>
                                            <td>@Model.Employedon</td>
                                        </tr>
                                        <tr>
                                            <td>Full Name</td>
                                            <td>@Model.FullName</td>
                                        </tr>
                                        <tr>
                                        <tr>
                                            <td>Bio</td>
                                            <td>@Model.Shortbio</td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td><a href="mailto:info@support.com">@Model.Email</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <p></p>
            @if (Model.Usertype == 2)
            {<h2>Educator's Performance</h2>
            <p> </p><p> </p>
            @:<br /><br />
                @:<div class="container">
                    @:<span>Progress bar of educator's performance: </span><br /><br />
                        @:</div>
                    @:<div class="progress">
                        @:<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow=@(Model.PerformancePercentage) aria-valuemin="0" aria-valuemax="100" style="width:@(Model.PerformancePercentageStr);min-width: 2em;">
                            @(Model.PerformancePercentageStr)
                        @:</div>
                            @:</div>
                        @:<dl class="dl-horizontal">
                            @:<dt>
                                @Html.Label("Tasks given: ")
                            @:</dt>
                            @:<dd>
                                @Html.DisplayFor(model => model.Totaltasks)
                            @:</dd>
                            @:<dt>
                                @Html.Label("Tasks completed: ")
                            @:</dt>
                            @:<dd>
                                @Html.DisplayFor(model => model.Taskscompleted)
                           @: </dd>
                            @:</dl>
            }
        </div>
    </div>

    @if (Model.Task.Count > 0)
    {
        @:<div class="container">
            @:<div class="row">
                @:<p></p>
                @:<h3>Latest Task Assigned</h3>
                @:<p> </p>
                @:<div class="col-md-12">
                    @:<div class="panel panel-default panel-table">
                        @:<div class="panel-body">
                            @:<table class="table table-striped table-bordered table-list">
                                @:<thead>
                                    @:<tr>
                                        @:<th>Task given by</th>
                                        @:<th>Task information</th>
                                        @:
                                        <th>Due Date</th>
                                        @:
                                        <th>Is Completed</th>
                                        @:</tr>
                                    @:</thead>
                                @:<tbody>
                                    @:<tr>
                                        @:
                                        <td>@(Model.Task.Last().Authorfirst)&ensp;@(Model.Task.Last().Authorlast)</td>
                                        @:<td>
                                            @(Model.Task.Last().Report.Title) 
                                        @:</td >
                                        @:
                                    <td>@(Model.Task.Last().Duedate)</td>
                                    @:
                                    <td>@(Model.Task.Last().Iscompleted)</td>
                                    @:</tr>
                                @:</tbody>
                            @:</table>
                        @:</div>
                    @:</div>
                @: </div>

            @:</div>
        @:</div>
    }

</body>