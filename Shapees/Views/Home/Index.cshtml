@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>

    <style>
        .ds-btn li {
            list-style: none;
            float: left;
            padding: 10px;
        }

            .ds-btn li a span {
                padding-left: 15px;
                padding-right: 5px;
                width: 100%;
                display: inline-block;
                text-align: left;
            }

                .ds-btn li a span small {
                    width: 100%;
                    display: inline-block;
                    text-align: left;
                }

            .ds-btn li a span {
                padding-left: 15px;
                padding-right: 5px;
                width: 100%;
                display: inline-block;
                text-align: left;
            }

                .ds-btn li a span small {
                    width: 100%;
                    display: inline-block;
                    text-align: left;
                }
    </style>

</head>

<body>

    <div class="container">
        <div class="row">

            <h2>Quick Links</h2>

            <ul class="ds-btn">
                <li>
                    <a class="btn btn-lg btn-primary" href="">
                        <i class="glyphicon glyphicon-user pull-left"></i><span>Users<br><small>Create a new User</small></span>
                    </a>
                </li>
                <li>
                    <a class="btn btn-lg btn-success" href="~/Home/DocumentsAndMedia">
                        <i class="glyphicon glyphicon-picture pull-left"></i><span>Media<br><small>Upload Media</small></span>
                    </a>
                </li>
                <li>
                    <a class="btn btn-lg btn-danger" href="~/Home/Scheduler">
                        <i class="glyphicon glyphicon-calendar pull-left"></i><span>Tasks<br><small>Set a New Task</small></span>
                    </a>
                </li>
                <li>
                    <a class="btn btn-lg btn-warning" href="">
                        <i class="glyphicon glyphicon-search pull-left"></i><span>Search<br><small>Search for a User</small></span>
                    </a>
                </li>
                <li>
                    <a class="btn btn-lg btn-info" href="~/Home/DocumentsAndMedia">
                        <i class="glyphicon glyphicon-edit pull-left"></i><span>Documents<br><small>Create New Document</small></span>
                    </a>
                </li>
            </ul>

        </div>
    </div>

    <div class="container">
        <div class="row">

            <div class="col-md-5">

                <h2>Sample User</h2>

                <div class="panel panel-default panel-table">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-3" align="center"> <img src="http://s3.amazonaws.com/nvest/Blank_Club_Website_Avatar_Gray.jpg" class="img-circle img-responsive"></div>
                            <div class=" col-sm-9">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Department</td>
                                        </tr>
                                        <tr>
                                            <td>Hire date</td>
                                        </tr>
                                        <tr>
                                            <td>Room</td>
                                        </tr>
                                        <tr>
                                            <td>Gender</td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h2>Annoucements</h2>

            <div class="col-md-7">
                <div class="panel panel-default panel-table">
                    <div class="panel-body">
                        <table class="table table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Announcement</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*Output Field*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <div class="row">

            <h2>Upcoming Events</h2>

            <div class="col-md-12">
                <div class="panel panel-default panel-table">
                    <div class="panel-body">
                        <table class="table table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>Given By</th>
                                    <th>Event</th>
                                    <th>Due Date</th>
                                    <th>Completed</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*Output Field*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
