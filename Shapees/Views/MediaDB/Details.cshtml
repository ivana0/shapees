@model Shapees.Models.DatabaseModel.Media

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/DocumentsAndMediaLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Media</h4>
    <hr />
    @if (Model.Filepath != null && Model.Mediatype == "image")
    {
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <img height="500" src="@ViewBag.imagesrc" /><br />
            </div>
        </div>
            <br />
    }
    @if (Model.Filepath != null && Model.Mediatype == "video")
    {
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <video controls>
                    <source src="@ViewBag.videosrc" type=video/webm>
                    <source src="@ViewBag.videosrc" type=video/ogg>
                    <source src="@ViewBag.videosrc" type=video/mp4>
                    <source src="@ViewBag.videosrc" type=video/3gp>
                </video>
            </div>
        </div>
        <br />
    }
    
