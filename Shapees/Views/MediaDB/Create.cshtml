                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Filepath" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Filepath" class="form-control" />
