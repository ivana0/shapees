@model Shapees.Models.DatabaseModel.Media

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this media file?</h3>
<div>
    <h4>Media</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="Mediaid" />
        <dt>
            Media type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Mediatype)
        </dd>
        <dt>
            Author
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AuthorFullName)
        </dd>
        <dt>
            Child
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChildFullName)
        </dd>
        <dt>
            Date uploaded
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dateuploaded)
        </dd>
        <dt>
            Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            &emsp;<a asp-action="Index"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&ensp;Back to Media List</a> &emsp;|&emsp;
            <button type="submit" class="btn btn-default">
                <span style="color:red;" class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
            </button>
        </div>
    </form>
</div>
